{
  "env": {
    "es6": true
  },
  "extends": ["plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 2],
    "semi": [2, "always", { "omitLastInOneLineBlock": true }],
    "curly": "error",
    "no-unused-vars": "error",
    "react/display-name": "off",
    "react/prop-types": "off"
  },

  "ignorePatterns": ["build/", "dist/", "node_modules/"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
